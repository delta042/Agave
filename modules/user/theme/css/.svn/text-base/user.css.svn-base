/*START USER MENU*/
#user-menu {
	display: block;
	height: 60px;
	text-align: center;
	margin-bottom: 30px;
}

#user-menu ul{
	float: left;
}

#user-menu a {
	text-decoration: none;
	color: #FFFFFF;
	padding: 5px;
}

#user-menu a:hover {
	color: #99BBFF;
}

#user-menu li.selected {
	background-color: #444444;
}

#user-menu li {
	float: left;
	list-style: none;
	padding: 5px;
	border-left: 1px solid #000000;
	border-right: 1px solid #000000;
	color: #fff;
	background-color: #777777;
	background-image: url(../../../admin/theme/images/glare.png);
}
#user-menu li:hover {
	background-color: #666666;
}
/*END USER MENU*/
